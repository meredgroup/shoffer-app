{
    "name": "shoffer",
    "version": "1.0.0",
    "description": "Persian-first carpooling platform for Iran",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "db:migrate": "wrangler d1 execute shoffer-db --local --file=./schema/migrations/0001_init.sql",
        "db:seed": "wrangler d1 execute shoffer-db --local --file=./schema/seed.sql",
        "db:migrate:prod": "wrangler d1 execute shoffer-db --file=./schema/migrations/0001_init.sql",
        "workers:dev": "cd workers && wrangler dev",
        "workers:deploy": "cd workers && wrangler deploy",
        "deploy": "npm run build && wrangler pages deploy .next"
    },
    "dependencies": {
        "@hono/zod-validator": "^0.2.0",
        "@next/swc-win32-x64-msvc": "^16.0.10",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "bcryptjs": "^2.4.3",
        "date-fns-jalali": "^3.6.0-0",
        "hono": "^4.0.0",
        "jsonwebtoken": "^9.0.0",
        "nanoid": "^5.0.0",
        "next": "15.0.3",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@cloudflare/next-on-pages": "^1.13.16",
        "@cloudflare/workers-types": "^4.20240000.0",
        "@types/node": "^20.0.0",
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "eslint": "^8.0.0",
        "eslint-config-next": "^14.2.0",
        "typescript": "^5.3.0",
        "wrangler": "^3.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
